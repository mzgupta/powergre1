<div class="row">
  <div class="center-block position-relative w-1000 f-20">
    {{#each hotWord in hotWords itemController="discover/word"}}
       {{#with hotWord}}
        <div class="col-md-6 mb-15">
            {{#mz-draggable word=hotWord.model startDragAction="drop" dropAction="drop" dragEndAction="reset"}}
            <div {{bind-attr class=":set highlight:highlight hide:invisible"}}>
              {{#if hotWord.model.flip}}
                  {{hotWord.model.word.name}}
              {{else}}
                  {{hotWord.model.word.meaning}}
              {{/if}}
            </div>
            {{/mz-draggable}}
        </div>
         {{/with}}
    {{/each}}
  {{partial "layout/navigation"}}
  </div>
</div>
